<launch>

  <rosparam  command="load"  file="$(find laser_stitcher)/param/basic_settings/basic_servo_positional.yaml"/>
  <rosparam  command="load"  file="$(find laser_mapper)/param/canyon_mapper_output.yaml"/>

  <node 
  	  name	  = "arbotix" 
  	  pkg	  = "arbotix_python" 
  	  type	  = "arbotix_driver" 
  	  output  = "screen"
  	>
	  <rosparam command="load" file="$(find laser_stitcher)/param/arbotix/arbotix.yaml"/>
  </node>

  <node
      name    = "laser_stitcher"
      pkg     = "laser_stitcher"
      type    = "laser_stitcher"
      args    = ""
      output  = "screen"
    >
  </node>

  <include file="$(find urg_node)/launch/urg_lidar.launch"> </include>

  <node
      name    = "arbotix_frame_publisher"
      pkg     = "laser_stitcher"
      type    = "arbotix_frame_publisher"
      args    = ""
    >
  </node>

  <node
    name    = "lidar_offset_corrector"   pkg = "tf"   type = "static_transform_publisher"
        args    = "0 0 0    0.00 0.0 1.2    /hokuyo_lidar_base /hokuyo_lidar_servo_zeroed    100"
  > </node>
  <node
    name    = "lidar_mount_misalignment_corrector"   pkg = "tf"   type = "static_transform_publisher"
        args    = "0 0 0    0 0.0 0.0    /hokuyo_lidar_servo_zeroed /hokuyo_lidar    100"
  > </node>

  <node
      name    = "servo_manager_positional"
      pkg     = "laser_stitcher"
      type    = "servo_manager_positional"
      args    = ""
      output  = "screen"
    >
  </node>
    
  <node
    name    = "laser_stitcher_client_servo"
    pkg     = "laser_stitcher"
    type    = "laser_stitcher_client_servo"
    args    = ""
    output  = "screen"
  >
  </node>

</launch>